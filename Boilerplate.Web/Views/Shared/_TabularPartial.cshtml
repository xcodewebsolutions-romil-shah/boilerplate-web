@model dynamic

<table id="fixed-columns-left" class="table table-striped table-hover table-bordered nowrap" style="width:100%">
    <thead>
        <tr>
            @foreach (var column in Model.Columns)
            {
                <th>@column.Value</th>
            }
        </tr>
    </thead>
    <tbody>
        
        @foreach (var row in Model.Rows)
        {
            <tr>
                @foreach (var column in Model.Columns)
                {
                    <td>
                        @Html.Raw(Boilerplate.Infrastructure.Utilities.DataFormatter.DetectTypeAndFormatValue(row[column.Key],System.Globalization.CultureInfo.CurrentCulture))
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<script>
    $('#fixed-columns-left').DataTable({
        scrollY: "300px",
        scrollX: true,
        scrollCollapse: true,
        paging: true,
        fixedColumns: true,
        fixedColumns: {
            leftColumns: 1,
        }
    });
</script>